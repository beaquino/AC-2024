{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I", "C:/msys64/mingw64/include",  // Include path for headers
                "-L", "C:/msys64/mingw64/lib",     // Library path
                "-lcurl"                           // Link with curl
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}